{
    "name": "J-MoshiVis",
    "dockerComposeFile": "docker-compose.yml",
    "service": "dev1",
    "workspaceFolder": "/workspace",
    "customizations": {
        "runArgs": ["--shm-size=16g", "--ipc=host"],
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-python.flake8"
            ]
        }
    },
    "postCreateCommand": "pip install -r .devcontainer/requirements.txt"
}